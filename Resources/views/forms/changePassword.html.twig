{% extends "@c975LUser/layout.html.twig" %}
{% trans_default_domain 'user' %}
{% set title = 'label.change_password'|trans %}

{% block user_content %}
{# Toolbar #}
    {{ toolbar_display('@c975LUser/tools.html.twig', 'changePassword', 'md', user) }}
{# Avatar #}
    {{ user_avatar() }}
{# Password requirement #}
    <p class="alert alert-warning text-center">
        {{ 'password.requirement'|trans({}, 'validators') }}
    </p>
{# Form #}
    {{ form_start(form) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}
{# Mandatory field #}
    <p class="text-muted">
        <em>
            {{ 'label.mandatory_field'|trans({}, 'services') }}
        </em>
    </p>
{% endblock %}