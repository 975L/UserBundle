{% extends "@c975LUser/layout.html.twig" %}
{% trans_default_domain 'user' %}
{% set title = 'label.reset_password'|trans %}

{% block user_content %}
{# Reset password info #}
    <p class="text-center">
        {{ 'text.reset_password_info'|trans }}
    </p>
{# Form #}
    {{ form_start(form) }}
        {{ form_widget(form) }}
{# Submit #}
        <div class="form-group">
            <input type="submit" value="{{ 'label.validate'|trans({}, 'toolbar') }}" class="btn btn-block btn-lg btn-primary" />
        </div>
    {{ form_end(form) }}
{% endblock %}