{% extends "@c975LUser/layout.html.twig" %}
{% trans_default_domain 'user' %}
{% set title = 'label.signin_create_account'|trans %}

{% block user_content %}
{# Already signed in #}
    {% if is_granted('ROLE_USER') %}
        {% include('@c975LUser/fragments/alreadySignedIn.html.twig') %}
{# Registration #}
    {% else %}
{# Information #}
        <p class="alert alert-info text-center">
            {{ 'text.register_info'|trans }}
        </p>
{# Password requirement #}
        <p class="alert alert-warning text-center">
            {{ 'password.requirement'|trans({}, 'validators') }}
        </p>
{# Form #}
        {{ form_start(form) }}
            {{ form_widget(form) }}
{# Register acceptance info #}
            {% include('@c975LUser/fragments/registerAcceptanceInfo.html.twig') %}
{# Submit #}
            <div class="form-group">
                <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-block btn-lg btn-primary" />
            </div>
            {{ form_end(form) }}{# Mandatory field #}
        <p class="text-muted">
            <em>
                {{ 'label.mandatory_field'|trans }}
            </em>
        </p>
    {% endif %}
{% endblock %}