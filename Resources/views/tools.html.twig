{% trans_default_domain 'toolbar' %}

{% spaceless %}
{# Display #}
{% if type == 'dashboard' or type == 'modify' or type == 'changePassword' or type == 'delete' %}
    {{ toolbar_button(path('user_display'), 'user')|raw }}
{% endif %}

{# Modify #}
{% if type == 'dashboard' or type == 'display' or type == 'changePassword' or type == 'delete' %}
    {{ toolbar_button(path('user_modify'), 'modify')|raw }}
{% endif %}

{# Cancel #}
{% if type != 'dashboard' and type != 'displayAvailable' and type != 'help' %}
    {{ toolbar_button('cancel', 'cancel')|raw }}
{% endif %}

{# Change password #}
{% if type == 'dashboard' or type == 'display' or type == 'modify' or type == 'delete' %}
    {{ toolbar_button(path('user_change_password'), 'change_password')|raw }}
{% endif %}

{# Help #}
{% if is_granted('ROLE_ADMIN') and type != 'help' %}
    {{ toolbar_button(path('user_help'), 'help')|raw }}
{% endif %}
{% endspaceless %}