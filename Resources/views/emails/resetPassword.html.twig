{% extends '@c975LEmail/emails/layout.html.twig' %}
{% trans_default_domain 'user' %}

{% block email_content %}
    {% block user_content %}
        <div>
    {# Explanation #}
            <p>
                {{ 'text.reset_password'|trans }}
            </p>
    {# Url #}
            <p>
                <a href="{{ url }}">{{ url }}</a>
            </p>
    {# Reset password not requested info #}
            <p>
                <strong>
                    {{ 'text.reset_password_not_requested'|trans({'%date%': date|localizeddate('medium', 'medium')}) }}
                </strong>
            </p>
        </div>
    {% endblock %}
{% endblock %}